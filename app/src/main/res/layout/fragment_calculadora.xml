<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pizarra"
    tools:context="com.prueba.principales.ilconto.calculadora">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        app:srcCompat="@color/Barra_estado"
        android:id="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="50sp"
        app:srcCompat="@drawable/user"
        android:id="@+id/imageView"
        android:layout_height="50sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Calcula tu cuenta..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:typeface="normal"
        android:textSize="24sp"
        android:gravity="center"
        app:srcCompat="@drawable/porce_144"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="15dp" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcu_btn"
        android:onClick="suma"
        android:textSize="18sp"
        android:elevation="4dp"
        android:background="@drawable/btn_calc"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/comensales2"
        android:layout_alignStart="@+id/saldo1"
        android:layout_alignEnd="@+id/editText2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tiza_cuenta1_96"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="%"
        android:textColorHint="#ffffff"
        android:textAlignment="center"
        android:layout_width="96sp"
        android:selectAllOnFocus="true"
        android:textColor="@android:color/white"
        android:elevation="0dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginTop="35dp"
        android:lineSpacingExtra="30sp"
        android:textSize="26sp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/saldo1"
        android:hint="Monto"
        android:textColorHint="#ffffff"
        android:textSize="16dp"
        android:layout_width="96sp"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:elevation="0dp"
        android:layout_above="@+id/calcu_btn"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignTop="@+id/comensales2" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/comensales2"
        android:hint="Comensales"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:singleLine="true"
        android:textColorLink="@android:color/darker_gray"
        android:elevation="0dp"
        android:layout_width="96dp"
        android:layout_alignBaseline="@+id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignEnd="@+id/textView"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/comu_96"
        android:id="@+id/imageView7"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toStartOf="@+id/imageView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tip_jar_96"
        android:id="@+id/imageView8"
        android:layout_marginTop="70dp"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/comensales2" />

</RelativeLayout>
